extends layout

block content
    br
    .container 
      a(href="/add").btn.btn-primary(style="float:right") Add Product 
      br
    br
    table.table.table-hover 
      thead.table-dark 
        tr 
          th Name
          th Description
          th Price
          th Rating
          th Cart
      tbody 
        each product in products 
          tr 
            td=product.name
            td=product.description
            td=product.price
            td
              -let n=0
              while n<=4
                if product.rating-1>=n
                  span 
                    i.fa.fa-star(style="color:yellow")
                else
                  span 
                    i.fa.fa-star
                -n+=1
            td 
              a(href="/cart/"+product._id).btn.btn-primary Add to Cart 
